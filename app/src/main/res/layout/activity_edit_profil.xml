<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".edit_profil">

    <ImageView
        android:id="@+id/foto_profile"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/tambah"
        android:layout_width="188dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:text="tambah GAMBAR" />

    <Button
        android:id="@+id/save"
        android:layout_width="247dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        android:text="SAVE KABEH" />

    <androidx.cardview.widget.CardView
        android:layout_width="362dp"
        android:layout_height="377dp"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/nisn"
                android:layout_width="318dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/textview"
                android:drawableLeft="@drawable/baseline_confirmation_number_24"
                android:drawablePadding="15dp"
                android:hint="NISN"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email"
                android:layout_width="318dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/textview"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="15dp"
                android:hint="EMAIL"
                android:padding="7dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nomer"
                android:layout_width="318dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/textview"
                android:drawableLeft="@drawable/baseline_local_phone_24"
                android:drawablePadding="15dp"
                android:hint="NO HP"
                android:padding="9dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/alamat"
                android:layout_width="318dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/textview"
                android:drawableLeft="@drawable/baseline_location_city_24"
                android:drawablePadding="15dp"
                android:hint="ALAMAT"
                android:padding="9dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/role"
                android:layout_width="318dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/textview"
                android:drawableLeft="@drawable/role"
                android:drawablePadding="15dp"
                android:hint="ROLE"
                android:padding="9dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/kelas"
                android:layout_width="318dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/textview"
                android:drawableLeft="@drawable/role"
                android:drawablePadding="15dp"
                android:hint="KELAS"
                android:padding="9dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>